
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-12">
        <h2>Job offers</h2>


        <div class="input-group col-md-12 search-box">
            <input type="text" class="form-control" placeholder="Search by offer title.." name="search" id="search" />
            <span class="input-group-btn">
                <button class="btn btn-info" type="submit" id="searchButton">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>

        <div id="offers-table-container container col-sm-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Job Title</th>
                        <th scope="col">Company</th>
                        <th scope="col">Location</th>
                        <th scope="col">Created</th>
                    </tr>
                </thead>
                <tbody id="offers"></tbody>
            </table>
        </div>
        @Html.ActionLink("Create job offer", "Create", "JobOffer", null, new { @class = "btn btn-primary" })
    </div>
</div>

<script src="js/offers-search.js"></script>



















