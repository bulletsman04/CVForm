@model List<JobApplication>

@{
    ViewData["Title"] = "Job Applications";
}

<h2>All job applications</h2>

<div class="row">
    <div class="col-sm-12 job-applications">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Job offer link</th>
                </tr>
            </thead>
            <tbody id="applications">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { offerId = item.OfferId, applicationId = item.Id })</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.PhoneNumber</td>
                    <td>@Html.ActionLink("Go to job offer", "Details", "JobOffer", new { id =item.OfferId}, new { @class = "btn btn-primary centered-button-cell" })</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>